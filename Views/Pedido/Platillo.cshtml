@{
    Layout = "_LayoutSimple";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Platillo</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Leckerli+One&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar-custom {
            background-color: #e74c3c;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .btn {
                color: white;
                font-family: 'Leckerli One', cursive;
            }

            .navbar-custom .btn {
                margin-left: 10px;
            }

        .details-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('../Images/Menu.jpg'); /* Reemplaza 'tu-imagen.jpg' con la ruta de tu imagen */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

            .details-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5); /* Cambia el 0.5 por el nivel de opacidad que prefieras */
                z-index: 1;
            }

        .details-content {
            z-index: 2;
            display: flex;
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .details-left {
            margin-right: 30px;
        }

            .details-left h2 {
                font-family: 'Leckerli One', cursive; /* Tipografía estilo taquería */
                font-size: 36px;
                color: #e74c3c;
            }

            .details-left p {
                font-size: 18px;
            }

            .details-left .price {
                font-size: 24px;
                color: #e74c3c;
                margin-top: 20px;
            }

        .details-right img {
            width: 400px;
            height: 400px;
            border-radius: 10px;
            margin-right: 10px;
            object-fit: contain;
        }

        .quantity {
            display: flex;
            align-items: center;
            margin-top: 20px;
        }

            .quantity input {
                width: 60px;
                text-align: center;
                font-size: 18px;
                margin: 0 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        .btn-custom {
            padding: 10px 20px;
            font-size: 18px;
            color: white;
            background-color: #e74c3c;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-family: 'Leckerli One', cursive; /* Tipografía estilo taquería */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
        }

            .btn-custom:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="@Url.Action("Home", "Pedido")">Eats Tech</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                @foreach (var i in ViewBag.Categorias)
                {
                    if (i.Activo == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Menu", "Pedido", new { Categoria = i.NombreCategoria })">@i.NombreCategoria</a>
                        </li>
                    }
                }
            </ul>
            <form>
                <button asp-action="Orden" asp-controller="Pedido" class="btn btn-danger">Finalizar orden</button>
            </form>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
            <a class="navbar-brand">@ViewBag.Mesa</a>
        </div>
    </nav>

    <!-- Detalles del Platillo -->
    <div class="details-container">
        <div class="details-content">
            <form method="post">
                <div class="details-left">
                    <h2>@ViewBag.Nombre</h2> <!-- Reemplaza 'Platillo 1' con el nombre del platillo -->
                    <p>@ViewBag.Descripcion</p> <!-- Reemplaza con la descripción del platillo -->
                    <div class="price">$@ViewBag.Costo</div> <!-- Reemplaza con el precio del platillo -->
                    <div class="quantity">
                        <label for="quantity">Cantidad:</label>
                        <input type="number" id="quantity" name="Cantidad" value="1" min="1">
                    </div>
                    <button type="submit" asp-action="Platillo" asp-controller="Pedido" class="btn btn-custom">Agregar al pedido</button>
                </div>
            </form>
            <div class="details-right">
                <img src="@ViewBag.Imagen" alt="Platillo 1"> <!-- Reemplaza 'platillo1.jpg' con la ruta de la imagen del platillo -->
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


