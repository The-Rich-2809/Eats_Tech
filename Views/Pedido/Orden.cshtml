@model Eats_Tech.Models.Tablas
@{
    Layout = "_LayoutSimple";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resumen de Orden</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Leckerli+One&display=swap" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .navbar-custom {
            background-color: #e74c3c;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .btn {
                color: white;
                font-family: 'Leckerli One', cursive;
            }

            .navbar-custom .btn {
                margin-left: 10px;
            }

        .bg {
            position: relative;
            min-height: 100vh;
            background-image: url('../Images/Orden.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .bg::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 1;
            }

        .content {
            position: relative;
            z-index: 2;
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 600px;
            text-align: center;
            margin-bottom: 30px;
        }

        .platillo-img {
            max-width: 50px;
            margin-right: 10px;
            vertical-align: middle;
            border-radius: 5px;
        }

        .platillo-name {
            font-family: 'Leckerli One', cursive;
            font-size: 18px;
            color: #333;
        }

        .logo {
            max-width: 150px;
            margin-bottom: 20px;
        }

        .title {
            font-family: 'Leckerli One', cursive;
            font-size: 48px;
            color: white;
            margin-bottom: 20px;
        }

        .summary-table {
            width: 100%;
            margin-bottom: 20px;
        }

            .summary-table th,
            .summary-table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .summary-table th {
                background-color: #f8f8f8;
            }

        .total {
            font-size: 24px;
            font-weight: bold;
            color: #e74c3c;
        }

        .finalize-btn {
            background-color: #e74c3c;
            color: white;
            font-family: 'Leckerli One', cursive;
            font-size: 24px;
            padding: 10px 30px;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .finalize-btn:hover {
                background-color: #c0392b;
            }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <a class="navbar-brand" href="@Url.Action("Home", "Pedido")">Eats Tech</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                @foreach (var i in ViewBag.Categorias)
                {
                    if (i.Activo == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Menu", "Pedido", new { Categoria = i.NombreCategoria })">@i.NombreCategoria</a>
                        </li>
                    }
                }
            </ul>
            <a class="navbar-brand">@ViewBag.NombreCliente</a>
            <a class="navbar-brand">@ViewBag.Mesa</a>
        </div>
    </nav>

    <!-- Fondo con Resumen -->
    <div class="bg">
        @{
            if (Model.Orden.Count() > 0)
            {
                double Total = 0;
                <div class="content">
                    <h2 class="title">Resumen de tu Orden</h2>

                    <table class="summary-table">
                        <thead>
                            <tr>
                                <th>Platillo</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Total</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.Orden)
                            {
                                if (i.IdCliente == ViewBag.IdCliente && i.Status == "Por pedir")
                                {
                                    foreach (var j in Model.Menu)
                                    {
                                        if (j.Id == i.IdMenu)
                                        {
                                            Total += i.Costo;
                                            <tr data-product-menu-id="@j.Id" data-orden-id="@i.Id">
                                                <td>
                                                    <img src="@j.RutaImagen" alt="Platillo 1" class="platillo-img">
                                                    <span class="platillo-name">@j.NombrePlatillo</span>
                                                </td>
                                                <td>
                                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                                        <input type="number" max="50"
                                                               class="form-control form-control-sm bg-secondary border-0 text-center numeric"
                                                               value="@i.Cantidad" data-product-inter-id="@i.Id">
                                                    </div>
                                                </td>
                                                <td>$@j.Costo</td>
                                                <td>$@i.Costo</td>
                                                <td>
                                                    <form asp-controller="Pedido" asp-action="BorrarPedido" method="get">
                                                        <input type="hidden" name="idord" value="@i.Id" />
                                                        <button class="btn btn-danger" type="submit">Borrar</button>
                                                    </form>
                                                </td>
                                            </tr>
                                            break;
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>

                    <div class="total">Total: $@Total</div>
                    @if (Total != 0)
                    {
                        <form asp-action="Orden" asp-controller="Pedido" method="post">
                            <input type="hidden" name="Total" value="@Total" />
                            <button type="submit" class="finalize-btn" >Finalizar orden</button>
                        </form>
                        // data-toggle="modal" data-target="#confirmationModal"
                    }

                </div>
            }
            else
            {
                <div class="d-flex justify-content-center">
                    <div class="card" style="width: 200%;">
                        <div class="card-body">
                            <div class="alert alert-info text-center">
                                <p>No hay productos.</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Modal -->
    @* <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmación</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Por favor, seleccione una opción:
                    <select id="modalSelect" class="form-control">
                        <option value="option1">Opción 1</option>
                        <option value="option2">Opción 2</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="submitForm()">Confirmar</button>
                </div>
            </div>
        </div>
    </div> *@

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function submitForm() {
            var selectedOption = document.getElementById("modalSelect").value;
            // Aquí puedes agregar lógica para manejar la opción seleccionada si es necesario
            document.getElementById("selectedOption").value = selectedOption;
            document.querySelector("form").submit();
        }

        $(document).ready(function () {
            function updateTotals() {
                var subtotal = 0;
                $('.numeric').each(function () {
                    var cantidad = parseFloat($(this).val());
                    var precio = parseFloat($(this).closest('tr').find('td:eq(2)').text().replace('$', ''));
                    var total = cantidad * precio;
                    subtotal += total;
                    $(this).closest('tr').find('td:eq(3)').text('$' + total.toFixed(2));
                });
                $('.total').text('Total: $' + subtotal.toFixed(2));
            }

            $('.numeric').on("change", function () {
                var valor = $(this).val();
                var idprodInter = $(this).closest('tr').data('product-menu-id');
                var carritoId = $(this).closest('tr').data('orden-id');
                $.ajax({
                    type: 'GET',
                    url: '/api/Values/CambioCantidad',
                    data: { valor: valor, idprodInter: idprodInter, carritoId: carritoId },
                    success: function (response) {
                        updateTotals();
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });

            updateTotals();
        });
    </script>
</body>
</html>

</html>
