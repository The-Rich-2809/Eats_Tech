@{
    Layout = "_LayoutSimple";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resumen de Orden</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Leckerli+One&display=swap" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .bg {
            position: relative;
            min-height: 100vh;
            background-image: url('../Images/Fondo2.jpg'); /* Reemplaza 'tu-imagen.jpg' con la ruta de tu imagen */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .bg::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5); /* Cambia el 0.5 por el nivel de opacidad que prefieras */
                z-index: 1;
            }

        .content {
            position: relative;
            z-index: 2; /* Asegura que el contenido esté por encima del filtro */
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 600px;
            text-align: center;
            margin-bottom: 30px;
        }

        .title {
            font-family: 'Leckerli One', cursive; /* Tipografía estilo taquería */
            font-size: 48px;
            color: white;
            margin-bottom: 20px;
        }

        .summary-table {
            width: 100%;
            margin-bottom: 20px;
        }

            .summary-table th,
            .summary-table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .summary-table th {
                background-color: #f8f8f8;
            }

        .total {
            font-size: 24px;
            font-weight: bold;
            color: #e74c3c;
        }

        .finalize-btn {
            background-color: #e74c3c;
            color: white;
            font-family: 'Leckerli One', cursive;
            font-size: 24px;
            padding: 10px 30px;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .finalize-btn:hover {
                background-color: #c0392b;
            }

        .platillo-img {
            max-width: 50px;
            margin-right: 10px;
            vertical-align: middle;
            border-radius: 5px;
        }

        .platillo-name {
            font-family: 'Leckerli One', cursive;
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>
    <!-- Fondo con Resumen -->
    <div class="bg">
        <div class="content">
            <h2 class="title">Resumen de tu Orden</h2>

            <!-- Tabla de Resumen -->
            <table class="summary-table">
                <thead>
                    <tr>
                        <th>Platillo</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img src="platillo1.jpg" alt="Platillo 1" class="platillo-img"> <!-- Reemplaza 'platillo1.jpg' con la ruta de la imagen del platillo -->
                            <span class="platillo-name">Platillo 1</span>
                        </td>
                        <td>2</td>
                        <td>$10.00</td>
                        <td>$20.00</td>
                    </tr>
                    <tr>
                        <td>
                            <img src="platillo2.jpg" alt="Platillo 2" class="platillo-img"> <!-- Reemplaza 'platillo2.jpg' con la ruta de la imagen del platillo -->
                            <span class="platillo-name">Platillo 2</span>
                        </td>
                        <td>1</td>
                        <td>$12.00</td>
                        <td>$12.00</td>
                    </tr>
                    <tr>
                        <td>
                            <img src="platillo3.jpg" alt="Platillo 3" class="platillo-img"> <!-- Reemplaza 'platillo3.jpg' con la ruta de la imagen del platillo -->
                            <span class="platillo-name">Platillo 3</span>
                        </td>
                        <td>3</td>
                        <td>$8.00</td>
                        <td>$24.00</td>
                    </tr>
                </tbody>
            </table>

            <div class="total">Total: $56.00</div>
            <form>
                <button asp-action="Orden" asp-controller="Pedido" class="finalize-btn">Finalizar orden</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
