@{
    Layout = "_LayoutSimple";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página con Imagen de Fondo y Formulario Centrado</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .bg {
            position: relative;
            height: 100%;
            background-image: url('../Images/FondoI.jpg'); /* Reemplaza 'tu-imagen.jpg' con la ruta de tu imagen */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .bg::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5); /* Cambia el 0.5 por el nivel de opacidad que prefieras */
                z-index: 1;
            }

        .content {
            position: relative;
            text-align: center;
            z-index: 2; /* Asegura que el contenido esté por encima del filtro */
            background: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .logo {
            max-width: 150px;
            margin-bottom: 20px;
        }

        .title {
            font-family: 'Leckerli One', cursive; /* Tipografía estilo taquería */
            font-size: 48px;
            color: #e74c3c;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            font-size: 18px;
            border-radius: 5px;
        }

        .btn-custom {
            padding: 15px 25px;
            font-size: 24px;
            color: white;
            background-color: #e74c3c;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            font-family: 'Leckerli One', cursive; /* Tipografía estilo taquería */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .btn-custom:hover {
                background-color: #c0392b;
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="bg">
        <div class="content">
            <img src="../Images/LogoTaco.jpg" alt="Logo" class="logo"> <!-- Reemplaza 'tu-logo.png' con la ruta de tu logo -->
            <div class="title">Ordena Aquí</div>
            <form method="post">
                <div class="form-group">
                    <label for="name" class="sr-only">Nombre</label>
                    <input name="Nombre" type="text" id="name" class="form-control" placeholder="Tu Nombre">
                </div>
                <div class="form-group">
                    <label for="email" class="sr-only">Nombre</label>
                    <input name="Correo" type="email" id="email" class="form-control" placeholder="Tu Correo">
                </div>
                <div class="form-group">
                    <label for="text" class="sr-only">Nombre</label>
                    <input name="Telefono" type="text" id="text" class="form-control" placeholder="Tu Telefono">
                </div>
                <button asp-action="Registro" asp-controller="Pedido" type="submit" class="btn btn-custom">Ordenar</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
