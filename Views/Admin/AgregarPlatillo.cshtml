@{
    Layout = "_LayoutAdmin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Agregar Platillo</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                <div class="row g-3">

                    <div class="col-sm-6">
                        <label for="Producto" class="form-label">Nombre del Platillo</label>
                        <input name="NombrePlatillo" type="text" class="form-control" id="Producto" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-5">
                        <label for="Categoria" class="form-label">Categoria del Platillo</label>
                        <select name="Categoria" class="form-select" id="Categoria" required>
                            <option value="">Categoria...</option>
                            <option>Pantalones</option>
                            <option>Playeras</option>
                            <option>Sudaderas</option>
                            <option>Calzado</option>
                        </select>
                        <div class="invalid-feedback">
                            Seleccione una categoria válida.
                        </div>
                    </div>

                    <div class="col-md-5">
                        <label for="Precio" class="form-label">Precio del platillo</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text">$</span>
                            <input name="Precio" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                            <span class="input-group-text">MXN</span>
                        </div>
                        <div class="invalid-feedback">
                            Coloque un precio.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Seleccione la imagen que llevara el platillo</label>
                            <input name="Imagen" class="form-control" type="file" id="formFileMultiple">
                        </div>
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>
                </div>

                <div class="col-sm-11">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Descripción del platillo</label>
                        <textarea name="Descripcion" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
                    </div>
                    <div class="invalid-feedback">
                        Se requiere una descripción.
                    </div>
                </div>

                <hr class="my-4">

                <button asp-controller="Admin" asp-action="AgregarPlatillo" method="post" class="w-100 btn btn-primary btn-lg" type="submit">Agregar Platillo</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>
</html>