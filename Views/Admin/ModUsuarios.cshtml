@{
    Layout = "_LayoutAdmin";
}
@model Eats_Tech.Models.Usuario
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <main class="container">
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <h1>Modificar Usuario</h1>
            <form class="needs-validation" novalidate method="post" enctype="multipart/form-data">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label for="Producto" class="form-label">Nombre del Usuario</label>
                        <input name="Nombre" type="text" class="form-control" id="Producto" placeholder="" asp-for="Nombre" required>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label for="email">Email <span class="text-muted">(Optional)</span></label>
                        <input name="Correo" asp-for="Correo" type="email" class="form-control" id="email" placeholder="you@example.com">
                        <div class="invalid-feedback">
                            Please enter a valid email address for shipping updates.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="password">Contraseña <span class="text-muted">(Optional)</span></label>
                        <input name="Contra1" type="password" class="form-control" id="password">
                        <div class="invalid-feedback">
                            Se requiere una contraseña valida.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="password">Confirme su contraseña <span class="text-muted">(Optional)</span></label>
                        <input name="Contra2" type="password" class="form-control" id="password">
                        <div class="invalid-feedback">
                            Se requiere una contraseña valida.
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label for="Producto" class="form-label">Categoria</label>
                        <select asp-for="TipoUsuario" name="Categoria" class="form-select" id="Categoria" required>
                            <option>Categoria...</option>
                            <option>Admin</option>
                            <option>Cocina</option>
                            <option>Mesero</option>
                            <option>Recepcion</option>
                        </select>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Seleccione la foto de perfil</label>
                            <input name="Imagen" class="form-control" type="file" id="formFileMultiple">
                        </div>
                        <div class="invalid-feedback">
                            Zip code required.
                        </div>
                    </div>
                </div>

                <input type="hidden" name="Id" asp-for="ID">
                <hr class="my-4">

                <button asp-controller="Admin" asp-action="ModUsuarios" method="post" class="w-100 btn btn-primary btn-lg" type="submit">Modificar Usuario</button>
            </form>
            <br />
            <h1>@ViewBag.Mensaje</h1>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/form-validation.js"></script>
</body>
</html>
