@{
    Layout = "_LayoutAdmin";
}
@model Eats_Tech.Models.Tablas
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios Registrados</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4">Clientes por pedir</h3>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Mesa</th>
                    <th>Status</th>
                    <th>Monto de la compra</th>
                    <th>Metodo de pago</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var i in Model.Cliente)
                    {
                        if (i.Status == "Empezando")
                        {
                            <tr>
                                <td>@i.Nombre</td>
                                @foreach(var j in Model.Usuario)
                                {
                                    @if (j.ID == i.IdMesa)
                                    {
                                        <td>@j.Nombre</td>
                                        break;
                                    }
                                }
                                <td>@i.Status</td>
                                <td>@i.PrecioFinal</td>
                                <td>@i.MetodoPago</td>
                            </tr>
                        }
                    }
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container mt-5">
        <h3 class="mb-4">Clientes por recibir</h3>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Mesa</th>
                    <th>Status</th>
                    <th>Monto de la compra</th>
                    <th>Metodo de pago</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var i in Model.Cliente)
                    {
                        if (i.Status == "Por recibir")
                        {
                        <tr>
                            <td>@i.Nombre</td>
                                @foreach (var j in Model.Usuario)
                                {
                                    @if (j.ID == i.IdMesa)
                                    {
                                    <td>@j.Nombre</td>
                                        break;
                                    }
                                }
                            <td>@i.Status</td>
                            <td>@i.PrecioFinal</td>
                            <td>@i.MetodoPago</td>
                        </tr>
                        }
                    }
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
